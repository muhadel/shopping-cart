<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMesssages}}hidden{{/if}}">
            {{ successMsg}}
        </div>
    </div>
</div>

{{#each gameProducts}}
<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p class="description">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">${{this.price}}</div>
                    <a href="/add-to-card/{{this._id}}" class="btn btn-success pull-right" role="button">Add to shopping
                        card</a>
                </div>
                </p>
            </div>
        </div>
    </div>
    {{/each}}